/**home.wxss**/
body{ 
  width:100%;
  height:100%;
  margin:0;
  padding:0;
}
.main{
  width:100%;
  height:100%;
  margin:0;
  padding:0;
  position: relative;
  overflow-y: hidden;
}
navigator{
  width:100%;
  height:100%;
}
 .bgImg{
 width:100%;
 height:1250rpx;
 filter: blur(15px);
} 
.userinfo {
  width: 100%;
  height:390rpx;
  background: #74B67D;
  opacity: 0.5;
  position: absolute;
  top:0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 256rpx;
  height: 256rpx;
  margin: 20rpx;
  border-radius: 50%;
  border:10rpx solid #74B67D;
}

.userinfo-nickname {
  color: #fff;
}
.userCtrl{
  position: absolute;
  top:390rpx;
  width:100%;
  height:70%;
  background: #74B67D;
  opacity: 0.7;
}
.ctrlItem{
  float: left;  
  width:49.8%;
  height:49.8%;
}
.userCtrl image{
  width:30%;
  height:30%;
  margin-left:35%;
  margin-top:20%;
}
.userCtrl text{
  display: block;
  text-align: center;
  color:#FFF;
  margin-top:30rpx;
}
.custom{
  background: #74B67D;
  opacity: 0.7;
  color:#FFF;
}